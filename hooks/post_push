#!/bin/bash

set -eu

echo "🔵post_push"

echo "✅Manifesting"
  echo "⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯⎯"

export DOCKER_CLI_EXPERIMENTAL=enabled

manifests=""

for FILE in ${DOCKERFILE_PATH%.*}.*
do
    TARGET_ARCH=$(echo "${FILE}" | cut -d '.' -f 2)

    echo $TARGET_ARCH

    manifests="${manifests} ${IMAGE_NAME}-${TARGET_ARCH}"
done

docker manifest create ${IMAGE_NAME} $manifests

for FILE in ${DOCKERFILE_PATH%.*}.*
do
    TARGET_ARCH=$(echo "${FILE}" | cut -d '.' -f 2)

    case "$TARGET_ARCH" in
        *amd64)
           ARCH="amd64"
           ARCH_VARIANT=""
            ;;
        *i386)
           ARCH="386"
           ARCH_VARIANT=""
            ;;
        *arm32v5)
            ARCH="arm"
            ARCH_VARIANT="v5"
            ;;
        *arm32v6)
            ARCH="arm"
            ARCH_VARIANT="v6"
            ;;
        *arm32v7)
            ARCH=arm
            ARCH_VARIANT="v7"
            ;;
        *arm64v8)
            ARCH=arm64
            ARCH_VARIANT="v8"
            ;;
        *)
           echo "Unknown target architecture ${TARGET_ARCH}"
           exit 0   
           ;;
    esac

    docker manifest annotate ${IMAGE_NAME} ${IMAGE_NAME}-${TARGET_ARCH} --os linux --arch ${ARCH}

done

docker manifest inspect --verbose ${IMAGE_NAME}

docker manifest push --purge "${IMAGE_NAME}"


curl -Lo manifest-tool https://github.com/estesp/manifest-tool/releases/download/v0.9.0/manifest-tool-linux-amd64
chmod +x manifest-tool


for FILE in ${DOCKERFILE_PATH%.*}.*
do
    TARGET_ARCH=$(echo "${FILE}" | cut -d '.' -f 2)

    case "$TARGET_ARCH" in
        *amd64)
            PLATFORMS="linux/amd64"
            ;;
        *i386)
            PLATFORMS="linux/386"
            ;;
        *arm32v5)
            PLATFORMS="linux/arm"
            ;;
        *arm32v6)
            PLATFORMS="linux/arm"
            ;;
        *arm32v7)
            PLATFORMS="linux/arm"
            ;;
        *arm64v8)
            PLATFORMS="linux/arm64"
            ;;
        *)
           echo "Unknown target architecture ${TARGET_ARCH}"
           exit 0
           ;;
    esac

    ./manifest-tool push from-args --platforms ${PLATFORMS} --template ${IMAGE_NAME}-${TARGET_ARCH} --target ${IMAGE_NAME}-${TARGET_ARCH}

done



